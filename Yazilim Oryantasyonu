		/*Algoritma 4--> Kullanıcı tarafından girilen 10 adet sayıyı tersten yazdıran program :
		
		int [] dizi = new int[10];
		System.out.println("10 adet sayi giriniz : ");
		
		for(int i=0;i<dizi.length;i++){
			dizi[i] = input.nextInt();
		
		}
		System.out.print("Girmis oldugunuz sayilar : ");
		for(int i=0;i<dizi.length;i++) {
			System.out.print(dizi[i] +" ");
		}
		System.out.print("\nGirilen sayilar tersi : ");
		for(int i=dizi.length-1;i>=0;i--) {
			System.out.print(dizi[i] + " "); 
		}  */
		
		//-----------------------------------------------------------------------------------
		
		/*Algoritma 5--> Yıldızlar ile bir dik kenar solda olacak şekilde dik üçgen yapımı: 
		 
		for(int i=1;i<=5;i++){
			
			for(int j=1;j<=i;j++){
				System.out.print("*");
			}
			System.out.println();
		}   */
		
		/*Algoritma 	6--> Yıldızlar ile eşkenar üçgen yapımı : 
		
		int a = 4;
		int b = 1;
		for(int i=1;i<=5;i++){
			
			for(int j=a;j>0;j--){
				System.out.print(" ");
			}
			a--;
			for(int k=1;k<=b;k++) {
				System.out.print("*");
			}
			if(b<=9) {
				b += 2;
			}
			
			
			System.out.println();
		} */
		
		//-----------------------------------------------------------------------------------
		
		/*Algoritma 7--> Kullanıcı tarafından girilen 10 adet sayının pozitif ve negatif adetlerini ve bu sayıları ekrana yazdıran program : 
		 
		int pozitifAdet = 0;
		int negatifAdet = 0;
		int [] dizi = new int[10];
		
		System.out.println("Sayi girin :");
		
		for(int i=0;i<=9;i++) {
			
			dizi[i] = input.nextInt();
			if(dizi[i]>0) {
				pozitifAdet++;
			}if(dizi[i]<0){
				negatifAdet++;
			}
		}
		
		System.out.println("Girilen pozitif sayi adedi : " +pozitifAdet);
		System.out.println("Girilen egatif sayi adedi : " +negatifAdet);
		
		System.out.print("Girilen pozitif sayilar : ");
		for(int i=0;i<=dizi.length-1;i++){
			if(dizi[i]>0){
				System.out.print(dizi[i] +" ");
			}
		}
		System.out.println();
		System.out.print("Girilen negatif sayilar : ");
		for(int i=0;i<=dizi.length-1;i++){
			if(dizi[i]<0){
				System.out.print(dizi[i] + " ");
			}
		} */
		
		//-----------------------------------------------------------------------------------
		
		/*Algoritma 	8--> Vücut kitle indeksi hesaplayan program : 
		
		int kilo = 85;
