import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in);
		
		/*
		1--> Kullanıcı tarafından girilen 5 adet sayıyı toplayan program
		2--> Kullanıcı tarafından girilen sayının karesini ve küpünü alan program
		3--> Kullanıcı tarafından girilen sayının faktöriyelini bulan program
		4--> Kullanıcı tarafından girilen 10 adet sayıyı tersten yazdıran program
		5--> Yıldızlar ile bir dik kenar solda olacak şekilde dik üçgen yapımı
		6--> Yıldızlar ile eşkenar üçgen yapımı
		7--> Kullanıcı tarafından girilen 10 adet sayının pozitif ve negatif adetlerini ve bu sayıları ekrana yazdıran program
		8--> Vücut kitle indeksi hesaplayan program
		9--> Vize ve final not hesaplayan program
		10--> Bankamatik uygulaması
		*/
		
		
		/*Algoritma 1--> Kullanıcı tarafından girilen 5 adet sayıyı toplayan program :
		
		int toplam = 0;
		System.out.println("Lutfen 5 adet sayi girin :");
		
		for(int i=1;i<=5;i++) {
			
			int a = input.nextInt();
			toplam += a;
		}
		System.out.println(toplam); */
		
		//-----------------------------------------------------------------------------------
		
		/*Algoritma 	2--> Kullanıcı tarafından girilen sayının karesini ve küpünü alan program : 
		
		System.out.print("Sayi girin :");
		int a = input.nextInt();
		
		int kareAl = a*a;
		int kupAl = a*a*a;
		
		System.out.println("Girmis oldugunuz "+ a +" sayisinin karesi : " + kareAl +
				" kupu : " + kupAl); */
		
		//-----------------------------------------------------------------------------------
		
		/*Algoritma 3--> Kullanıcı tarafından girilen sayının faktöriyelini bulan program: 
		
		int faktoriyel = 1;
		
		System.out.print("Faktoriyelini almak istediginiz sayiyi girin : ");
		int a = input.nextInt();
		
		for(int i=1;i<=a;i++) {
			faktoriyel *= i;
		}
		System.out.println(faktoriyel); */
		
