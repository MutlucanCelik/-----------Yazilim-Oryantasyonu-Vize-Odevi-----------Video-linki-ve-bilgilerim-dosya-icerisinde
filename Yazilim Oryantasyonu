		System.out.println("Vucut kitle indeksiniz : " + vki); */
		
		//-----------------------------------------------------------------------------------
		
		/*Algoritma 	9--> Vize ve final not hesaplayan program: 
		
		int vize = 40;
		int finall =100;
		
		double vizeNot = vize*0.4;
		double finallNot = finall*0.6;
		
		double not = vizeNot + finallNot;
		
		System.out.println("Ortalamaniz : " + not); */
		
		//-----------------------------------------------------------------------------------
		
		/*Algoritma 10--> Bankamatik uygulaması : 
		
		int bakiye = 100;
		
		System.out.println("Firat bankamatige hosgeldiniz...");
		System.out.println("Bakiyeniz : " +bakiye);
		System.out.println("[1]-Para Cek\n[2]-Para Yatir\n[3]-Cikis");
		System.out.print("Secim : ");
		int secim = input.nextInt();
		
		
		if(secim == 3){
			System.out.println("Firat bankamatik iyi gunceler diler...");
		}else if(secim == 1) {
			System.out.print("Cekmek istediginiz miktari girin : ");
			int miktar = input.nextInt();
			if(miktar<0) {
				System.out.println("Negarif bir miktar cekemezsiniz");
			}else if(miktar>bakiye) {
				System.out.println("Yetersiz bakiye");
			}else if(miktar<=bakiye) {
				bakiye -=miktar;
				System.out.println(miktar +" TL Cektiniz");
				System.out.println("Guncel bakiyeniz : " +bakiye);
				System.out.println("Firat bankamatik iyi gunceler diler...");
			}else {
				System.out.println("Hatali giris");
				
			}
		}else if(secim == 2) {
			System.out.print("Yatirmak istediginiz miktari girin : ");
			int miktar = input.nextInt();
			if(miktar<0) {
				System.out.println("Negarif bir miktar yatiramazsiniz");
			}else if (miktar>0) {
				bakiye += miktar;
				System.out.println(miktar +" TL Yatirdiniz");
				System.out.println("Guncel bakiyeniz : " +bakiye);
				System.out.println("Firat bankamatik iyi gunceler diler...");
			}
		} */

	}

}



